<%= form_for @accessory do |f| %>
    <%= f.label :brand  %>
    <%= f.text_field :brand  %>

    <%= f.label :model  %>
    <%= f.text_field :model  %>

    <%= f.label :category  %>
    <%= f.text_field :category  %>

    <%= f.label :description  %>
    <%= f.text_field :description  %>

    <%= f.label :partnumber  %>
    <%= f.text_field :partnumber  %>

    <%= f.label :image  %>
    <%= f.text_field :image %>

    <%= f.label :pagelink  %>
    <%= f.text_field :pagelink %>

    <%= f.label :costprice  %>
    <%= f.number_field :costprice, step: 0.01, precision: 2 %>

    <%= f.label :retailprice  %>
    <%= f.number_field :retailprice, step: 0.01, precision: 2 %>

    <%= f.submit %>
<% end %>