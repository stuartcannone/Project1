<%= form_for @customer do |f| %>
    <%= f.label :name  %>
    <%= f.text_field :name, value: @customer.name   %>

    <%= f.label :email  %>
    <%= f.email_field :email, value: @customer.email %>

    <%= f.label :phone, 'Best Contact Number: '  %>
    <%= f.text_field :phone, :placeholder => '61 423 123 123', value: @customer.phone    %>

    <%= f.label :postcode  %>
    <%= f.text_field :postcode  %>

    <%= f.label :agerange, 'Age: '  %>
    <%= f.select(:agerange, options_for_select([["18-25", "18-25"], ["25-40", "25-40"], ["40-55", "40-55"], ["55-65", "55-65"], ["65+", "65+"], ["Unspecified", "Unspecified"]], selected: @customer.agerange)) %>


    <%= f.label :purchasetime, 'Purchase Time Frame: ' %>
    <%= f.select(:purchasetime, options_for_select([["Wants to buy now", "Immediate"], ["In The next 6 months ", "<6 months"], ["6 months to a year ", "6-12 months"], ["1-2 years", "12-24 months"], ["2+ years", ">24 months"], ["Unspecified", "Unspecified"]], selected: @customer.purchasetime)) %>


    <%= f.label :experience, 'Level of Boating Experience: '  %>
    <%= f.select(:experience, options_for_select([["NEW", "NEW"], ["Beginner", "Beginner"], ["Intermediate", "Intermediate"], ["Experienced", "Experienced"], ["Unspecified", "Unspecified"]], selected: @customer.experience)) %>


    <%= f.label :ownershipstatus, 'Current Ownership Status: '  %>
    <%= f.select(:ownershipstatus, options_for_select( [["Never owned a watercaft", "Never"],["Currently Own a Watercraft", "Current Owner"], ["Previously Owner a Watercraft", "Previous Owner"],["Unspecifed", "Unspecifed"]], selected: @customer.ownershipstatus))  %>

    <%= f.label :boattype, 'Looking to buy: '  %>
    PWC <%= f.check_box :boattype, {multiple: true}, "PWC", checked: f.object.boattype.include?("PWC") %>
    Aluminium <%= f.check_box :boattype, {multiple: true}, "Aluminium Boats", checked: f.object.boattype.include?("Aluminium Boats") %>
    Fibreglass <%= f.check_box :boattype, {multiple: true}, "Fibreglass Boats", checked: f.object.boattype.include?("Fibreglass Boats") %>


    <%= f.label :interests %>
    Family <%= f.check_box :interests, {multiple: true}, "Family", {checked: @customer.interests.include?("Family")} %>
    Cruising <%= f.check_box :interests, {multiple: true}, "Cruising", {checked: @customer.interests.include?("Cruising")} %>
    Fishing <%= f.check_box :interests, {multiple: true}, "Fishing", {checked: @customer.interests.include?("Fishing")} %>


    <%= f.label :testdrive, 'Would like a test drive'  %>
    <%= f.select(:testdrive, options_for_select( [["Yes", "Yes"],["No", "No"], ["Unspecifed", "Unspecifed"]], selected: @customer.testdrive))    %>

    <%= f.label :notes  %>
    <%= f.text_field :notes, value: @customer.notes    %>

    <%= f.submit %>
<% end %>