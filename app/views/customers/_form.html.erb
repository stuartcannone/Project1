<%= form_for @customer do |f| %>

    <%= f.label :name  %>
    <%= f.text_field :name  %>

    <%= f.label :email  %>
    <%= f.email_field :email  %>

    <%= f.label :phone, 'Best Contact Number: '  %>
    <%= f.text_field :phone, :placeholder => '61 423 123 123'  %>

    <%= f.label :postcode  %>
    <%= f.text_field :postcode  %>

    <%= f.label :agerange, 'Age: '  %>
    <%= f.select(:agerange, options_for_select( [["18-25", "18-25"],["25-40", "25-40"], ["40-55", "40-55"], ["55-65", "55-65"],["65+","65+"],["Unspecifed", "Unspecifed"]]))  %>

    <%= f.label :purchasetime, 'Purchase Time Frame: ' %>
    <%= f.select(:purchasetime, options_for_select( [["Wants to buy now", "Immediate"],["In The next 6 months ", "<6 months"], ["6 months to a year ", "6-12 months"], ["1-2 years", "12-24 months"], ["2+ years", ">24 months"],["Unspecifed", "Unspecifed"]]))%>

    <%= f.label :experience, 'Level of Boating Experience: '  %>
    <%= f.select(:experience, options_for_select( [["NEW", "NEW"],["Begginer", "Beginner"], ["Intermediate", "Intermediate"], ["Experienced", "Experienced"],["Unspecifed", "Unspecifed"]]))  %>

    <%= f.label :ownershipstatus, 'Current Ownership Status: '  %>
    <%= f.select(:ownershipstatus, options_for_select( [["Never owned a watercaft", "Never"],["Currently Own a Watercraft", "Current Owner"], ["Previously Owner a Watercraft", "Previous Owner"],["Unspecifed", "Unspecifed"]]))  %>

    <%= f.label :boattype, 'Looking to buy: '  %>
    PWC <%= f.check_box :boattype, {multiple: true}, "PWC", nil %>
    Aluminium<%= f.check_box :boattype, {multiple: true}, "Aluminium Boats", nil %>
    Fibreglass<%= f.check_box :boattype, {multiple: true}, "Fibreglass Boats", nil %>

    <%= f.label :interests %>
    Family <%= f.check_box :interests, {multiple: true}, "Family", nil %>
    Cruising <%= f.check_box :interests, {multiple: true}, "Cruising", nil %>
    Fishing <%= f.check_box :interests, {multiple: true}, "Fishing", nil %>

    <%= f.label :testdrive, 'Would like a test drive'  %>
    <%= f.select(:testdrive, options_for_select( [["Yes", "Yes"],["No", "No"], ["Unspecifed", "Unspecifed"]]))   %>

    <%= f.label :notes  %>
    <%= f.text_field :notes  %>

    <%= f.submit %>
<% end %>