
<%= form_for @customer do |f| %>
    
<div class="form-group">
    <%= f.label :name  %>
    <%= f.text_field :name, value: @customer.name, class:"form-control"   %>
</div>
<div class="form-group">
    <%= f.label :email  %>
    <%= f.email_field :email, value: @customer.email, class:"form-control", id:"exampleInputEmail1" %>
</div>   
<div class="form-group">   
    <%= f.label :phone, 'Best Contact Number: '  %>
    <%= f.text_field :phone, :placeholder => '61 423 123 123', value: @customer.phone, class:"form-control"    %>
</div>
<div class="form-group">   
    <%= f.label :postcode  %>
    <%= f.text_field :postcode, class:"form-control"   %>
</div>
<div class="form-group">   
    <%= f.label :agerange, 'Age: '  %>
    <%= f.select(:agerange, options_for_select([["18-25", "18-25"], ["25-40", "25-40"], ["40-55", "40-55"], ["55-65", "55-65"], ["65+", "65+"], ["Unspecified", "Unspecified"]], selected: @customer.agerange, class:"form-control")) %>
</div>
<div class="form-group">   
    <%= f.label :purchasetime, 'Purchase Time Frame: ' %>
    <%= f.select(:purchasetime, options_for_select([["Wants to buy now", "Immediate"], ["In The next 6 months ", "<6 months"], ["6 months to a year ", "6-12 months"], ["1-2 years", "12-24 months"], ["2+ years", ">24 months"], ["Unspecified", "Unspecified"]], selected: @customer.purchasetime, class:"form-control")) %>
</div>
<div class="form-group">  
    <%= f.label :experience, 'Level of Boating Experience: '  %>
    <%= f.select(:experience, options_for_select([["NEW", "NEW"], ["Beginner", "Beginner"], ["Intermediate", "Intermediate"], ["Experienced", "Experienced"], ["Unspecified", "Unspecified"]], selected: @customer.experience, class:"form-control")) %>
</div>
<div class="form-group">
    <%= f.label :ownershipstatus, 'Current Ownership Status: '  %>
    <%= f.select(:ownershipstatus, options_for_select( [["Never owned a watercaft", "Never"],["Currently Own a Watercraft", "Current Owner"], ["Previously Owned a Watercraft", "Previous Owner"],["Unspecifed", "Unspecifed"]], selected: @customer.ownershipstatus, class:"form-control"))  %>
</div>
<div class="form-check">
    <%= f.label :boattype, 'Looking to buy: '  %>
    PWC <%= f.check_box :boattype, {multiple: true}, "PWC", checked: f.object.boattype.include?("PWC") %>
    Aluminium <%= f.check_box :boattype, {multiple: true}, "Aluminium Boats", checked: f.object.boattype.include?("Aluminium Boats") %>
    Fibreglass <%= f.check_box :boattype, {multiple: true}, "Fibreglass Boats", checked: f.object.boattype.include?("Fibreglass Boats") %>
</div>
<div class="form-check">
    <%= f.label :interests, class:"form-check-label", for:"defaultCheck1" %>
    Family <%= f.check_box :interests, {multiple: true}, "Family", {class: "form-check-input", type: "checkbox", id: "defaultCheck1", checked: @customer.interests.include?("Family")} %>
    Cruising <%= f.check_box :interests, {multiple: true}, "Cruising", {class: "form-check-input", type: "checkbox", id: "defaultCheck2", checked: @customer.interests.include?("Cruising")} %>
    Fishing <%= f.check_box :interests, {multiple: true}, "Fishing", {class: "form-check-input", type: "checkbox", id: "defaultCheck3", checked: @customer.interests.include?("Fishing")} %>
</div>
<div class="form-group">
    <%= f.label :testdrive, 'Would like a test drive'  %>
    <%= f.select(:testdrive, options_for_select( [["Yes", "Yes"],["No", "No"], ["Unspecifed", "Unspecifed"]], selected: @customer.testdrive, class:"form-control"))    %>
</div>
<div class="form-group">
    <%= f.label :notes  %>
    <%= f.text_field :notes, value: @customer.notes, class:"form-control", id:"exampleFormControlTextarea1", rows: "3" %>
</div>
    <%= f.submit class: "btn btn-lg btn-success" %>
<% end %>
</div>
